# Port to run the server on
PORT=3000
HOST=localhost
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Redis (for rate limiting and queues)
REDIS_URL=redis://localhost:6379

# Log level: debug | info | warn | error
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"
CORS_CREDENTIALS=true
CORS_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="Content-Type,Authorization"

# Enable OpenAPI documentation (set to "false" to disable)
DOCS_ENABLED=true
DOCS_PROVIDER=scalar # scalar | swaggerui
DOCS_PATH=/docs

# API route prefix
API_PREFIX=/api/v1

# ============================================================================
# Queue Configuration (BullMQ)
# ============================================================================

# Enable/disable the queue system
QUEUE_ENABLED=true

# Optional: Separate Redis URL for queues (defaults to REDIS_URL)
# QUEUE_REDIS_URL=redis://localhost:6379

# Worker concurrency (jobs processed in parallel per queue)
QUEUE_CONCURRENCY=5

# ============================================================================
# Bull Board (Queue Dashboard)
# ============================================================================

# Enable Bull Board web UI
BULL_BOARD_ENABLED=true
BULL_BOARD_PATH=/admin/queues

# Optional: Basic auth for Bull Board (recommended in production)
# BULL_BOARD_USERNAME=admin
# BULL_BOARD_PASSWORD=secret
