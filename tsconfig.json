{
  "compilerOptions": {
    "target": "ES2021",                                  
    "module": "ES2022",                                
    "moduleResolution": "bundler",                    
    "baseUrl": ".",                                     
    "paths": {
      "@/*": ["./src/*"],
      "@config/*": ["./src/config/*"],
      "@core/*": ["./src/core/*"],
      "@plugins/*": ["./src/plugins/*"],
      "@modules/*": ["./src/modules/*"]
    },
    "types": ["bun-types"],                                     
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                               
  }
}
